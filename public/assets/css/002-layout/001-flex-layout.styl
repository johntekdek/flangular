
containerWidth = unquote('calc(100% - (.618em * 2))')
html
	display: flex 
	flex-direction: row
	justify-content: center
	align-items: stretch
body
	flex-basis: 80%
.globalHeader
	hflex()
	justify-content: space-between
	align-items: space-between
	flex-wrap: wrap
	width: containerWidth
	align-self: flex-start
	&__branding
		order: 1
		flex-grow: 1
		vflex()
		width: 10rem
		height: 4rem
		&__siteTitle, &__subTitle
			margin: 0
	&__search, &__globalNav, &__auxNav
		order: 2
		flex-grow: 0
		display: flex
		flex-direction: row
		justify-content: flex-end
		align-items: center
		flex-wrap: no-wrap
		height: 4rem
		width: 16rem
		width: 26vw
		&__input
			order: 1
			width: 61.803398875%
			flex-grow: 0
			flex-shrink: 0
			height: 2rem
		&__submit
			order: 2
			flex-grow:1
	&__globalNav, &__auxNav
		height: 3rem
		align-items: flex-start
		font-size: .9em
	&__topNav
		order: 3
		flex-basis: 100%
		flex-grow: 0
.main
	hflex()
	justify-content: space-between
	align-items: baseline
	flex-wrap: nowrap
	flex-basis: 80%
	width: containerWidth
.globalFooter
	&__wrapper
		hflex()
		justify-content: space-between
		align-items: baseline
		flex-wrap: wrap
		flex-basis: 10vh
		width: containerWidth
		align-self:flex-end
	&__contact
		vflex()
		align-items: flex-end
.sidebar
	vflex()
	flex-basis: 20%
	height: 100%
	flex-grow:1
.nav
	display:flex
	flex-wrap: wrap
	ul, li
		list-style-type: none
	&__list
		justify-content: space-around
		align-items:stretch
		&__item
			flex-grow:1
			display:flex
			flex-direction:row
			align-items:stretch
			justify-content:center
			&__link
				flex-grow:1
	&--horizontal
		flex-direction:horizontal
		.nav__list
			flex-grow: 1
			horizontalFlex()
			&__item
				&__link
					text-align:center
	&--vertical
		flex-direction: vertical
		.nav__list
			verticalFlex()
			&__item
				&__link
					padding-left: .618em
.content 
	horizontalFlex()
	flex-basis: 80%
	flex-grow:1
	&__wrap
		height: 100%
		flex-basis: @flex-basis
		flex-grow: 1


