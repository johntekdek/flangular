html
	display:block
body
	width: 80%
	margin: 0 auto
header, .main, footer
	padding: 0 0

.globalHeader
	width: 100%
	&__branding
		float:left
		width: 10em
		height: 4rem
		&__siteTitle, &__subTitle
			margin: 0
	&__search
		float:right
		height: 2em
		width: 16em
		&__input
			width: 61.803398875%
			height: 2rem
	&__topNav
		width: 100%
		clear: both
.main
	width: 98%
	clear:both
	min-height: 20em
	&::before, &::after
		content: " "
		display: table
	&::after
		display: both
	&__content
		width: 100%
	&__sidebar
		+ .main__content
			width: 80%

.globalFooter
	clear:both
	width: 100%
	height: 8em
	&__wrapper
		width: 98%
	&__title, &__legalNotice, &__contact
		width: 33%
		display: inline-block
	&__title
		float:left
	&__contact
		float:right
		text-align:right
		> a
			display: block
.sidebar
	float:left
	width: 20%
	height: 100%
	&--right
		float:right
.nav
	display:block
	ul, li
		list-style-type: none
	&__list
		justify-content: space-around
		align-items:stretch
		&__item
			flex-grow:1
			display:flex
			flex-direction:row
			align-items:stretch
			justify-content:center
			&__link
				flex-grow:1
	&--horizontal
		flex-direction:horizontal
		.nav__list
			flex-grow: 1
			horizontalFlex()
			&__item
				&__link
					text-align:center
	&--vertical
		flex-direction: vertical
		.nav__list
			verticalFlex()
			&__item
				&__link
					padding-left: .618em
.content
	float:right 
	&__wrap
		height: 100%
		width: 100%
	&__sidebar
		+ .content__wrap
			width: 80%



